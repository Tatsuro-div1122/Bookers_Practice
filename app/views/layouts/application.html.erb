<!DOCTYPE html>
<html>
  <head>
    <title>BookersPractice</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/22bae51414.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="navbar navbar-inverse">
      <div class="container">
        <div class="row">
          <div class="col-lg-3">
            <h3 class="text-muted">Bookers</h3>
          </div>
    
          <div class="col-lg-9">
            <ul class="list-inline list-unstyled text-right">
              <% if user_signed_in? %>
                <li><%= link_to "Home", user_path(current_user) %></li>
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "Books", books_path %></li>
                <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "About", home_about_path %></li>
                <li><%= link_to "sign up", new_user_registration_path %></li>
                <li><%= link_to "login", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </header>

    <% if flash[:notice] %>
      <p class = "success"><%= flash[:notice] %></p>
    <% end %>
      <%= yield %>

    <footer>
      <p class="text-right">CopyRight Infratop.inc</p>
    </footer>
  </body>

</html>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1>Editing Book</h1>

			<!-- エラーメッセージ -->
			<% if @book.errors.any? %>
			<%= @book.errors.count %><h4>errors prohibited this obj from being saved:</h4>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			<% end %>

			<!-- フォーム -->
			<%= form_for(@book) do |f| %>
				<%= f.label :title, "Title" %><br>
				<%= f.text_field :title %><br>
				<%= f.label :body, "Opinion" %><br>
				<%= f.text_area :body %><br>
				<%= f.submit "Update Book" %>
			<% end %>
			<%= link_to "Show", book_path(@book.id) %>
			|
			<%= link_to "Back", books_path %>

		</div>
	</div>
</div>
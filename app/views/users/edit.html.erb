<div class="container">
	<div class="row">
		<div class="col-lg-9">
			<h2>User info</h2>

			<% if @user.errors.any? %>
			<=% @user.errors.count %><h4> errors prohibited this obj from being saved:</h4>
			<ul>
				<% @user.errors.full_messages.each do |messsage| %>
				<li><%= message %></li>
				<% end %>
			</ul>
			<% end %>

			<ul class="list-unstyled">
				<%= form_for(@user) do |f| %>
				  <li><%= f.label :name, "Name" %></li>
				  <li><%= f.text_field :name %></li>
				  <li><%= f.label :profile_image, "Image" %></li>
				  <li><%= f.attachment_field :profile_image, class: "user-edit-form" %></li>
				  <li><%= f.label :introduction, "Introduction" %></li>
				  <li><%= f.text_area :introduction %></li>
				  <li><%= f.submit "Update User", class: "btn btn-default"%></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>
